<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.karine.mynews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
      <!--  <activity android:name=".controllers.activities.NotificationsActivity"></activity>-->

        <activity android:name=".controllers.activities.WebViewActivity" />
        <activity android:name=".controllers.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- A child of the main activity for up arrow -->
        <activity
            android:name=".controllers.activities.SearchActivity"
            android:label="Search"
            android:parentActivityName=".controllers.activities.MainActivity" />
        <!-- A child of the search activity for up arrow -->
        <activity
            android:name=".controllers.activities.SearchResultActivity"
            android:label="SearchResult"
            android:parentActivityName=".controllers.activities.SearchActivity" />
        <!-- A child of the mainActivity for up arrow-->
        <activity
            android:name=".controllers.activities.NotificationsActivity"
            android:label="Notifications"
            android:parentActivityName=".controllers.activities.MainActivity"/>
    </application>

</manifest>