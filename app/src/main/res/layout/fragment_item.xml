<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#EEF1F1"
    app:cardCornerRadius="2dp"
    android:elevation="2dp">

    <RelativeLayout
        android:id="@+id/fragment_item"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:scaleType="centerCrop">


        <ImageView
            android:id="@+id/fragment_item_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="20dp"
            android:scaleType="center" />

        <TextView
            android:id="@+id/fragment_item_date"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="260dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#0124AF"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/fragment_item_section"
            android:layout_width="281dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/fragment_item_photo"
            android:textColor="#110000"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/fragment_item_title"
            android:layout_width="281dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="13dp"
            android:layout_toEndOf="@+id/fragment_item_photo" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
