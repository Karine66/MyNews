<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <RelativeLayout
        android:id="@+id/fragment_item"
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:scaleType="centerCrop">


        <ImageView
            android:id="@+id/fragment_item_photo"
            android:layout_width="88dp"
            android:layout_height="78dp"
            android:layout_marginStart="2dp" />

        <TextView
            android:id="@+id/fragment_item_date"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="240dp"
            android:layout_marginTop="2dp"
            android:text=""
            android:textColor="#0124AF"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_item_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="18dp"
            android:layout_toEndOf="@+id/fragment_item_photo"
            android:textColor="#110000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_item_title"
            android:layout_width="281dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="65dp"
            android:layout_marginBottom="13dp"
            android:layout_toEndOf="@+id/fragment_item_photo" />

    </RelativeLayout>

</LinearLayout>
